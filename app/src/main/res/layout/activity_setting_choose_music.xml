<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4CD8A">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginRight="@dimen/x30"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x180"
        android:src="@drawable/icon_back"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x100"
        android:layout_marginBottom="@dimen/x90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_music_1"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_music_2"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_2"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_music_3"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_3"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_music_4"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_4"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_music_5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_5"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_music_stop"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_stop"
            android:adjustViewBounds="true"/>
    </LinearLayout>

</RelativeLayout>