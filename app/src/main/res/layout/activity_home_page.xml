<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4CD8A">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/x300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/homepage"/>

        <ImageView
            android:layout_marginLeft="@dimen/x150"
            android:id="@+id/ll_0_0"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x330"
            android:background="@drawable/shezhi"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_marginTop="-3dp"
                android:id="@+id/ll_0_1"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x330"
                android:background="@drawable/zhishilianjie"/>

            <ImageView
                android:layout_marginLeft="@dimen/x100"
                android:id="@+id/ll_1_0"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x330"
                android:background="@drawable/ziyouchuangzuo"/>
        </LinearLayout>


        <ImageView
            android:layout_marginRight="@dimen/x150"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_1_1"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x330"
            android:background="@drawable/xuexi"/>
    </RelativeLayout>

</RelativeLayout>