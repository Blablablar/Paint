<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/homepage"
            android:scaleType="centerCrop"
            android:transitionName="bg"/>

        <RelativeLayout
            android:id="@+id/rl_page_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

    </FrameLayout>


    <com.example.airal.paint.tool.HorizontalListView
        android:visibility="gone"
        android:layout_toLeftOf="@+id/bottom_right"
        android:id="@+id/listview"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x90"
        android:background="@color/toolbar_color">
    </com.example.airal.paint.tool.HorizontalListView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x120"
        android:background="@drawable/radius_bottom_right"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_bottom_func_1"
            android:padding="@dimen/x18"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x100"
            android:src="@mipmap/duicheng"/>

        <ImageView
            android:id="@+id/iv_bottom_func_2"
            android:padding="@dimen/x10"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x100"
            android:src="@mipmap/next"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_right_top"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x12"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:src="@mipmap/cancel"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:src="@mipmap/delete"/>

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_back"
        android:padding="@dimen/x10"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:src="@mipmap/back"/>

</RelativeLayout>